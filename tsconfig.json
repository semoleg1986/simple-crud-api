{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
    },
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es6"],
    "module": "ES2022",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
}
